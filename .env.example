# ChittyChain Evidence Ledger Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/chittychain
POSTGRES_URL=postgresql://user:password@localhost:5432/chittychain

# Authentication
SESSION_SECRET=your-super-secret-session-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# Application
NODE_ENV=development
PORT=3000
CLIENT_PORT=5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Blockchain Simulation
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_CONFIRMATION_BLOCKS=6